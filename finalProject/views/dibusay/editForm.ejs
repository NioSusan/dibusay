<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=food.name%></h1>
        <div style="width:30%; margin:20px auto;">
            <form action="/dibusay/<%=food.id%>/edit" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=food.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%=food.price%>" min="5000" step="1000">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%=food.image%>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="description" value="<%=food.description%>">
                    </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/dibusay">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
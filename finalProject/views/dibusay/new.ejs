<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Add a New Food</h1>
      <div style="width:30%; margin:20px auto;">
        <form action="/dibusay" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="name" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="price" min="5000" step="1000" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="description" required>
          </div>
          
          <div class="_box _checkbox">
              <div class="title">Tags</div>
              <% tags.forEach(function(tag){ %>
                <div class="cell">
                    <label for="<%=tag.name%>">
                      <input type="checkbox" name="tags" value="<%=tag.id%>">
                      <span class="square"></span>
                      <%=tag.name%>
                    </label>
                  </div>
              <% }) %>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/dibusay">Go Back</a>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
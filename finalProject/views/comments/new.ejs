<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%=food.name%></h1>
        <div style="width:30%; margin:20px auto;">
            <form action="/dibusay/<%=food.id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/dibusay">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>